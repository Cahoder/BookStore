<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>BookStore</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
	    <servlet-name>meauSearch</servlet-name>
	    <servlet-class>servlet.MenuSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>meauSearch</servlet-name>
	    <url-pattern>/client/MenuSearchServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>product</servlet-name>
	    <servlet-class>servlet.ProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>product</servlet-name>
	    <url-pattern>/client/ProductServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>user</servlet-name>
	    <servlet-class>servlet.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>user</servlet-name>
	    <url-pattern>/client/UserServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>cart</servlet-name>
	    <servlet-class>servlet.CartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>cart</servlet-name>
	    <url-pattern>/client/CartServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>login</servlet-name>
	    <servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>login</servlet-name>
	    <url-pattern>/client/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>notice</servlet-name>
	    <servlet-class>servlet.NoticeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>notice</servlet-name>
	    <url-pattern>/client/NoticeServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>order</servlet-name>
	    <servlet-class>servlet.OrderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>order</servlet-name>
	    <url-pattern>/client/OrderServlet</url-pattern>
	</servlet-mapping>
</web-app>